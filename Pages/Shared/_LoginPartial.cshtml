@using Microsoft.AspNetCore.Identity
@using NBADATA.Models
@inject SignInManager<ApplicationUser> SignInManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link nav-link-custom" asp-page="/Profile/Index" title="Mi Perfil">
                <i class="fas fa-user"></i> @User.Identity?.Name
            </a>
        </li>
        <li class="nav-item">
            <form class="d-inline" asp-page="/Account/Logout" method="post" asp-antiforgery="true">
                <button type="submit" class="btn btn-link nav-link nav-link-custom" style="border: none; background: none; padding: 0.5rem 1rem;">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link nav-link-custom" asp-page="/Account/Login">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link nav-link-custom" asp-page="/Account/Register">Register</a>
        </li>
    }
</ul>
