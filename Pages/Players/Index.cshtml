@page
@model NBADATA.Pages.Players.IndexModel
@{
    ViewData["Title"] = "Players";
}

<h2>Players</h2>

<form method="get" class="row g-2 mb-3">
    <div class="col-auto">
        <input class="form-control" type="text" name="q" value="@Model.q" placeholder="Buscar por nombre o equipo" />
    </div>
    <div class="col-auto">
        <button class="btn btn-primary" type="submit">Buscar</button>
    </div>
    @if (!string.IsNullOrWhiteSpace(Model.error))
    {
    <div class="col-12 text-danger">@Model.error</div>
    }
</form>

@if (!string.IsNullOrWhiteSpace(Model.ApiErrorMessage))
{
    <div class="alert alert-warning mb-3">
        <i class="fas fa-exclamation-triangle"></i> 
        @Model.ApiErrorMessage
    </div>
}

@if (Model.ShowingApiResults && Model.Players.Count > 0)
{
    <div class="alert alert-info mb-3">
        <i class="fas fa-basketball-ball"></i> 
        <strong>Base de datos oficial NBA:</strong> Mostrando @Model.Players.Count jugador@(Model.Players.Count != 1 ? "es" : "") de la API de balldontlie.io
    </div>
}

<form method="post" asp-page-handler="Compare">
    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th></th>
                    <th>Nombre</th>
                    <th>Equipo</th>
                    <th>Pos</th>
                    <th>PTS</th>
                    <th>REB</th>
                    <th>AST</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model.Players)
            {
                <tr>
                    <td><input type="checkbox" name="selected" value="@p.Id" /></td>
                    <td>@p.FullName</td>
                    <td>@p.Team</td>
                    <td>@p.Position</td>
                    <td>@p.Pts</td>
                    <td>@p.Reb</td>
                    <td>@p.Ast</td>
                </tr>
            }
            </tbody>
        </table>
    </div>

    <div class="d-flex gap-2">
        <input type="hidden" name="mode" value="stats" />
        <button class="btn btn-outline-primary" type="submit" onclick="this.form.mode.value='stats'">Comparar (Stats)</button>
        <button class="btn btn-outline-secondary" type="submit" onclick="this.form.mode.value='profile'">Comparar (Perfil)</button>
    </div>
</form>
