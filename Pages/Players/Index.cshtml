@page
@model NBADATA.Pages.Players.IndexModel

@{
    ViewData["Title"] = "Jugadores NBA";
}

<div class="container mt-4">

    <!-- T칤tulo / Hero -->
    <div class="mb-4">
        <h1 class="display-5 fw-bold">
            <span class="me-2">游논</span> Jugadores NBA
        </h1>
        <p class="text-muted mb-0">
            Explora y busca jugadores de la NBA con datos actualizados desde la API de balldontlie.io
        </p>
    </div>

    <!-- Buscador -->
    <form method="get" class="mb-3">
        <div class="input-group input-group-lg">
            <input asp-for="q"
                   class="form-control"
                   placeholder="Buscar por nombre o equipo..." />
            <button class="btn btn-orange" type="submit">
                游댌 Buscar
            </button>
        </div>
    </form>

    @if (!string.IsNullOrWhiteSpace(Model.error))
    {
    <div class="alert alert-danger">
        @Model.error
    </div>
    }

    @if (Model.Players != null && Model.Players.Any())
    {
        <!-- Aviso de fuente de datos -->
    <div class="alert alert-primary mt-3">
        <strong>游늭 Base de datos oficial NBA:</strong>
        Mostrando @Model.Players.Count jugadores de la API de balldontlie.io
    </div>

 <!-- Tabla de jugadores -->
    <div class="card mt-3 shadow-sm">
        <div class="card-header bg-dark text-white">
            <strong>Lista de Jugadores</strong>
        </div>

        <div class="table-responsive">
            <table class="table table-striped align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" style="width:40px;" class="text-center">
                            <input type="checkbox"
                                   onclick="toggleAll(this)" />
                        </th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Equipo</th>
                        <th scope="col">Posici칩n</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model.Players)
                        {
                    <tr>
                        <td class="text-center">
                            <input type="checkbox"
                                   name="selectedPlayers"
                                   value="@p.Id"
                                   form="compare-form" />
                        </td>
                        <td>@p.FullName</td>
                        <td>
                            <span class="badge bg-secondary">
                                @p.Team
                            </span>
                        </td>
                        <td>@(string.IsNullOrWhiteSpace(p.Position) ? "-" : p.Position)</td>
                    </tr>
                        }
                </tbody>
            </table>
        </div>
    </div>

 <!-- Bot칩n para comparar seleccionados -->
    <form id="compare-form"
          asp-page="/Compare/Index"
          method="get"
          class="mt-3">
        <button type="submit" class="btn btn-warning">
            游대 Comparar jugadores seleccionados
        </button>
    </form>
    }
    else
    {
    <div class="alert alert-warning mt-4">
        No se encontraron jugadores. Intenta con otro nombre o equipo.
    </div>
    }
</div>

@section Scripts {
    <script>
        // Marcar / desmarcar todos los checkboxes de la tabla
        function toggleAll(source) {
            const checkboxes = document.querySelectorAll('input[name="selectedPlayers"]');
            checkboxes.forEach(cb => cb.checked = source.checked);
        }
    </script>
}
